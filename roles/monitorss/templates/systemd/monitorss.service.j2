[Unit]
Description=MonitoRSS bot

[Service]
WorkingDirectory={{ MONITORSS_DIR }}
ExecStart=/usr/bin/node {{ MONITORSS_DIR }}/server.js
Type=simple
Restart=on-failure
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=monitorss
Environment="DRSS_START=bot"
User={{ MONITORSS_USER }}
Group={{ MONITORSS_USER }}

[Install]
WantedBy=multi-user.target
